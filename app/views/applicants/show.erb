<h1><%= "#{@applicant.first_name} #{@applicant.last_name}" %></h1>

<div class="profile">
  <ul>
    <li>ID: <%= @applicant.id %></li>
    <li>Name: <%= "#{@applicant.first_name} #{@applicant.last_name}" %></li>
    <li>Email: <%= @applicant.email %></li>
    <li><%= erb :"applicants/_delete", layout: false, locals: { applicant: @applicant } %></li>
  </ul>
</div>

<p>
  <a href="/positions">View Positions for Hire</a>
</p>

<h2>Submitted Applications</h2>

<% unless @applications.empty? %>

  <% @applications.each do |application| %>
    <%= erb :"positions/_position_info", layout: false, locals: { position: application.position } %>
    <p>
      Resume: <a href="/resumes/download/<%= application.resume.file_name %>"><%= application.resume.file_name %></a>
    </p>
    <p>
      <%= erb :"applications/_delete", layout: false, locals: { application: application } %>
    </p>
  <% end %>

<% else %>

  <p>You haven't applied to any positions.</p>

<% end %>

<h2>My Resumes</h2>

<div class="links">
  <a href="/resumes/new">Upload a Resume</a>
</div>

<% unless @resumes.empty? %>

  <br>

  <% @applicant.resumes.each do |resume| %>
    <div class="resume_info">
      <p>Resume ID: <%= resume.id %></p>
      <p>
        File: <a href="/resumes/download/<%= resume.file_name %>"><%= resume.file_name %></a>
      </p>
      <%= erb :"resumes/_delete", layout: false, locals: { resume: resume } %>
    </div>
  <% end %>

<% else %>

  <p>You don't have any resumes.</p>

<% end %>
