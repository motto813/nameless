<style>
  form { padding: 10px; }
  div { padding: 5px; }
</style>

<p class="register_prompt">Applicants: Register by completing all the fields below.</p>

<div class="register">
  <form action="/applicants" method="post">
    <div>
      <label for="applicant_first_name">First Name</label>
      <input id="applicant_first_name" name="applicant[first_name]" type="text">
    </div>
    <div>
      <label for="applicant_last_name">Last Name</label>
      <input id="applicant_last_name" name="applicant[last_name]" type="text">
    </div>
    <div>
      <label for="applicant_email">Email</label>
      <input id="applicant_email" name="applicant[email]" type="text">
    </div>
    <div>
      <label for="applicant_password">Password</label>
      <input id="applicant_password" name="applicant[password]" type="text">
    </div>
    <div>
      <input name="commit" type="submit" value="Register Applicant">
    </div>
  </form>
</div>
