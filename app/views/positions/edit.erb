<h1>Edit Position</h1>

<p class="register_prompt"><b>Recruiters:</b> Edit this position by changing any of the values in the field below.</p>

<div class="register">
  <form action="/positions/<%= @position.id %>" method="post">
  <input name="_method" type="hidden" value="put">
    <div>
      <label for="position_company">Company: </label>
      <select required name="position[company_id]">
        <!-- <option value="">Select from list</option> -->
        <% @companies.each do |company| %>
        <option value="<%= company.id %>" <%= "selected" if @position.company_id == company.id %>><%= company.name %></option>
        <% end %>
      </select>
    </div>

    <%= erb :"positions/_form_fields", layout: false %>

    <div>
      <input name="commit" type="submit" value="Update Position">
    </div>
  </form>
</div>
