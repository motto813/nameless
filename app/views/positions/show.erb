<h1><%= @position.title %></h1>

<div id="position_list">
  <h3>Company: <%= @position.company.name %></h3>
  <p>Description: <em><%= @position.description %></em></p>
</div>

<br>

<div id="applicant_position">
  <% if session[:user].instance_of? Applicant %>

      <% if @position.is_applied_to_by_applicant?(session[:user]) %>
        <p>You have applied for this position</p>
      <% else %>
        <p><a href="/applications/new?position_id=<%= @position.id %>&applicant_id=<%= session[:user].id %>">Apply for Position</a></p>
      <% end %>

  <% end %>
</div>

<div id="recruiter_position">
  <% if @position.was_created_by_recruiter?(session[:user]) %>
    <p>
      You listed this position. <a href="/positions/<%= @position.id %>/edit">Edit</a>
      <%= erb :"positions/_delete", layout: false, locals: { position: @position } %>
    </p>
  <% end %>
</div>

<h2>Pending Applications</h2>

<% unless @position.applications.nil? %>

  <% @position.applications.each do |application| %>
    <div class="position_apps">
      <p>Applicant ID: <%= application.resume.id %></p>
      <p><a href="/resumes/download/<%= application.resume.file_name %>">Download Resume</a></p>
    </div>
  <% end %>

<% else %>

  <p>There are no applications for this position.</p>

<% end %>
