<h1><%= "#{@recruiter.first_name} #{@recruiter.last_name}" %></h1>

<div class="profile">
  <ul>
    <li>Recruiter ID: <%= @recruiter.id %></li>
    <li>Name: <%= "#{@recruiter.first_name} #{@recruiter.last_name}" %></li>
    <li>Email: <%= @recruiter.email %></li>
    <li><%= erb :"recruiters/_delete", layout: false, locals: { recruiter: @recruiter } %></li>
  </ul>
</div>

<br>

<p>
  <a href="/positions/new">List a Position for Hire</a>
</p>

<h2>My Listed Positions</h2>

<% if @positions.empty? %>

  <p>You don't have any listed positions.</p>

<% else %>

  <% @positions.each do |position| %>
    <a href="/positions/<%= position.id %>">
      <%= erb :"positions/_position_info", layout: false, locals: { position: position } %>
    </a>
  <% end %>

<% end %>
