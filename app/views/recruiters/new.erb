<style>
  form { padding: 10px; }
  div { padding: 5px; }
</style>

<h1>New Recruiter</h1>

<p class="register_prompt">Register by completing all the fields below.</p>

<div class="register">
  <form action="/recruiters" method="post">
    <%= erb :"recruiters/_form_fields", layout: false %>
    <div>
      <label for="recruiter_password">Password:</label>
      <br>
      <input id="recruiter_password" name="recruiter[password]" type="password">
    </div>
    <div>
      <label for="confirm_password">Confirm Password:</label>
      <br>
      <input id="confirm_password" name="recruiter[password_confirmation]" type="password">
    </div>
    <div>
      <input name="commit" type="submit" value="Register Recruiter">
    </div>
  </form>
</div>
